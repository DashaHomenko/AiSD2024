void delete_list(ListNode head, ListNode x) {
    ListNode* p = *head; // Указатель на текущий узел
    ListNode* pred = item_ahead(*head, *x); // Указатель на предшествующий узел

    if (pred == nullptr) {
        // Если удаляемый узел — это головной узел
        *head = p->next;
    } else {
        // Иначе, обновляем указатель предшествующего узла
        pred->next = (*x)->next;
    }

    delete *x; // Освобождаем память узла
}


