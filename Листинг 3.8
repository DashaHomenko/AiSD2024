TreeNode* find_minimum(TreeNode* t) {
    if (t == nullptr) {
        return nullptr; // Если дерево пустое, возвращаем nullptr
    }

    TreeNode* min = t;
    while (min->left != nullptr) {
        min = min->left; // Переходим к левому дочернему узлу
    }

    return min; // Возвращаем указатель на наименьший элемент
}


